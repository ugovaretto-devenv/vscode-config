{
    
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build active file",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-I",
                "${config:vulkan_paths.VulkanIncludePath}",
                "-L",
                "${config:vulkan_paths.VulkanLibPath}",
                "-l",
                "vulkan",
                "-std=${config:cpp_standard}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clang++ build active file",
            "type": "shell",
            "command": "/usr/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-I",
                "${config:vulkan_paths.VulkanIncludePath}",
                "-L",
                "${config:vulkan_paths.VulkanLibPath}",
                "-l",
                "vulkan",
                "-std=${config:cpp_standard}",
                "-o",
                "${fileDirname}/build/${fileBasenameNoExtension}.exe"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "diagnostics",
            "type": "shell",
            "command": "echo",
            "args": [
                "${env:VULKAN_ROOT}",
                "${config:vulkan_paths.VulkanIncludePath}"
            ]
        }

    ]
}